<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Login con Reconocimiento Facial</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .container {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        text-align: center;
        max-width: 500px;
        width: 90%;
      }
      
      h1 {
        color: #333;
        margin-bottom: 1rem;
        font-size: 2rem;
      }
      
      .subtitle {
        color: #666;
        margin-bottom: 2rem;
      }
      
      .camera-container {
        position: relative;
        margin: 2rem auto;
        border-radius: 10px;
        overflow: hidden;
        background: #f0f0f0;
        width: 320px;
        height: 240px;
      }
      
      #video {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      
      .camera-placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: #999;
        font-size: 1.1rem;
      }
      
      .face-indicator {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(0,0,0,0.8);
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.9rem;
        font-weight: bold;
      }
      
      .face-indicator.single {
        background: rgba(40, 167, 69, 0.9);
      }
      
      .face-indicator.multiple {
        background: rgba(220, 53, 69, 0.9);
      }
      
      .face-indicator.none {
        background: rgba(255, 193, 7, 0.9);
        color: #333;
      }
      
      .buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin: 2rem 0;
        flex-wrap: wrap;
      }
      
      button {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 600;
      }
      
      .btn-primary {
        background: #667eea;
        color: white;
      }
      
      .btn-primary:hover {
        background: #5a6fd8;
        transform: translateY(-2px);
      }
      
      .btn-secondary {
        background: #f8f9fa;
        color: #333;
        border: 2px solid #e9ecef;
      }
      
      .btn-secondary:hover {
        background: #e9ecef;
      }
      
      .btn-success {
        background: #28a745;
        color: white;
      }
      
      .btn-success:hover {
        background: #218838;
      }
      
      .btn-disabled {
        background: #6c757d;
        color: white;
        cursor: not-allowed;
      }
      
      .btn-disabled:hover {
        background: #6c757d;
        transform: none;
      }
      
      .status {
        margin: 1rem 0;
        padding: 1rem;
        border-radius: 8px;
        font-weight: 500;
      }
      
      .status.info {
        background: #e7f3ff;
        color: #0066cc;
        border: 1px solid #b3d9ff;
      }
      
      .status.success {
        background: #e8f5e8;
        color: #155724;
        border: 1px solid #c3e6cb;
      }
      
      .status.error {
        background: #ffe6e6;
        color: #721c24;
        border: 1px solid #f5c6cb;
      }
      
      .status.warning {
        background: #fff3cd;
        color: #856404;
        border: 1px solid #ffeaa7;
      }
      
      .hidden {
        display: none;
      }
      
      .user-info {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 10px;
        margin-top: 1rem;
      }
      
      .user-info h3 {
        color: #28a745;
        margin-bottom: 0.5rem;
      }
      
      .validation-info {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        margin: 1rem 0;
        font-size: 0.9rem;
        color: #666;
      }
      
      .validation-info.error {
        background: #ffe6e6;
        color: #721c24;
        border: 1px solid #f5c6cb;
      }
      
      .validation-info.success {
        background: #e8f5e8;
        color: #155724;
        border: 1px solid #c3e6cb;
      }
    </style>
  </head>
  <body>
    <!-- Encabezado de la aplicaci√≥n -->
    <div class="container">
      <h1>üîê Login Facial</h1>
      <p class="subtitle">Usa tu rostro para acceder de forma segura</p>
      
      <!-- Contenedor para mostrar la c√°mara -->
      <div class="camera-container">
        <video id="video" class="hidden"></video>
        <div id="placeholder" class="camera-placeholder">
          üì∑ C√°mara no iniciada
        </div>
        <div id="faceIndicator" class="face-indicator hidden">
          0 rostros
        </div>
      </div>
      
      <!-- Informaci√≥n de validaci√≥n -->
      <div id="validationInfo" class="validation-info hidden">
        <strong>Para registrarte:</strong> Solo debe haber UN rostro visible en la c√°mara
      </div>
      
      <div class="buttons">
        <button id="startCamera" class="btn-secondary">Iniciar C√°mara</button>
        <button id="loginBtn" class="btn-primary hidden">Iniciar Sesi√≥n</button>
        <button id="registerBtn" class="btn-success hidden">Registrar Rostro</button>
      </div>
      
      <!-- √Årea para mostrar mensajes al usuario -->
      <div id="status" class="status hidden"></div>
      
      <!-- Informaci√≥n de usuario autenticado -->
      <div id="userInfo" class="user-info hidden">
        <h3>¬°Bienvenido!</h3>
        <p>Has iniciado sesi√≥n correctamente</p>
        <button id="logoutBtn" class="btn-secondary" style="margin-top: 1rem;">Cerrar Sesi√≥n</button>
      </div>
    </div>

    <script>
      // Clase principal que maneja toda la l√≥gica de la aplicaci√≥n
      class FacialRecognitionApp {
        constructor() {
          // Capturar referencias a elementos DOM importantes
          this.video = document.getElementById('video');
          this.placeholder = document.getElementById('placeholder');
          this.faceIndicator = document.getElementById('faceIndicator');
          this.validationInfo = document.getElementById('validationInfo');
          this.startCameraBtn = document.getElementById('startCamera');
          this.loginBtn = document.getElementById('loginBtn');
          this.registerBtn = document.getElementById('registerBtn');
          this.logoutBtn = document.getElementById('logoutBtn');
          this.status = document.getElementById('status');
          this.userInfo = document.getElementById('userInfo');
          
          // URL del servidor backend
          this.serverUrl = 'http://localhost:8000';
          this.stream = null;
          this.faceDetectionInterval = null;
          this.currentFaceCount = 0;
          
          // Inicializar funcionalidades
          this.initEventListeners();
          this.checkExistingSession();
        }
        
        // Configurar los event listeners para los botones
        initEventListeners() {
          this.startCameraBtn.addEventListener('click', () => this.startCamera());
          this.loginBtn.addEventListener('click', () => this.attemptLogin());
          this.registerBtn.addEventListener('click', () => this.registerFace());
          this.logoutBtn.addEventListener('click', () => this.logout());
        }
        
        // Iniciar la c√°mara web del usuario
        async startCamera() {
          try {
            // Solicitar acceso a la c√°mara
            this.stream = await navigator.mediaDevices.getUserMedia({ 
              video: { width: 320, height: 240 } 
            });
            
            // Configurar el video y mostrar la vista de la c√°mara
            this.video.srcObject = this.stream;
            this.video.play();
            
            // Actualizar UI para mostrar c√°mara y botones de acci√≥n
            this.video.classList.remove('hidden');
            this.placeholder.classList.add('hidden');
            this.startCameraBtn.classList.add('hidden');
            this.loginBtn.classList.remove('hidden');
            this.registerBtn.classList.remove('hidden');
            this.faceIndicator.classList.remove('hidden');
            this.validationInfo.classList.remove('hidden');
            
            this.showStatus('C√°mara iniciada correctamente', 'info');
            
            // Iniciar detecci√≥n de rostros en tiempo real
            this.startFaceDetection();
            
          } catch (error) {
            this.showStatus('Error al acceder a la c√°mara: ' + error.message, 'error');
          }
        }
        
        // Iniciar detecci√≥n de rostros en tiempo real
        startFaceDetection() {
          // Verificar rostros cada 2 segundos
          this.faceDetectionInterval = setInterval(async () => {
            if (this.video.videoWidth > 0) {
              await this.detectFaces();
            }
          }, 2000);
        }
        
        // Detectar n√∫mero de rostros en la imagen actual
        async detectFaces() {
          try {
            const imageData = this.captureFrame();
            
            const response = await fetch(`${this.serverUrl}/detect-faces`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ image: imageData })
            });
            
            const result = await response.json();
            const faceCount = result.data?.face_count || 0;
            
            this.updateFaceIndicator(faceCount);
            this.updateRegisterButton(faceCount);
            
          } catch (error) {
            console.error('Error en detecci√≥n de rostros:', error);
          }
        }
        
        // Actualizar indicador visual de rostros
        updateFaceIndicator(faceCount) {
          this.currentFaceCount = faceCount;
          const indicator = this.faceIndicator;
          
          if (faceCount === 0) {
            indicator.textContent = '‚ùå Sin rostros';
            indicator.className = 'face-indicator none';
          } else if (faceCount === 1) {
            indicator.textContent = '‚úÖ 1 rostro';
            indicator.className = 'face-indicator single';
          } else {
            indicator.textContent = `‚ö†Ô∏è ${faceCount} rostros`;
            indicator.className = 'face-indicator multiple';
          }
        }
        
        // Actualizar estado del bot√≥n de registro
        updateRegisterButton(faceCount) {
          const registerBtn = this.registerBtn;
          const validationInfo = this.validationInfo;
          
          if (faceCount === 1) {
            registerBtn.classList.remove('btn-disabled');
            registerBtn.classList.add('btn-success');
            registerBtn.disabled = false;
            registerBtn.textContent = 'Registrar Rostro';
            
            validationInfo.className = 'validation-info success';
            validationInfo.innerHTML = '<strong>‚úÖ Listo para registro:</strong> Un rostro detectado correctamente';
            
          } else if (faceCount === 0) {
            registerBtn.classList.remove('btn-success');
            registerBtn.classList.add('btn-disabled');
            registerBtn.disabled = true;
            registerBtn.textContent = 'Sin rostros detectados';
            validationInfo.className = 'validation-info error';
            validationInfo.innerHTML = '<strong>‚ùå Error:</strong> No se detect√≥ ning√∫n rostro. Por favor, aseg√∫rate de que solo haya un rostro visible.';
          } else {
            registerBtn.classList.remove('btn-success');
            registerBtn.classList.add('btn-disabled');
            registerBtn.disabled = true;
            registerBtn.textContent = 'Demasiados rostros';
            validationInfo.className = 'validation-info error';
            validationInfo.innerHTML = '<strong>‚ùå Error:</strong> Se detectaron m√∫ltiples rostros. Por favor, aseg√∫rate de que solo haya un rostro visible.';
          }
        }
        // Capturar un fotograma del video actual
        captureFrame() {
          const canvas = document.createElement('canvas');
          canvas.width = this.video.videoWidth;
          canvas.height = this.video.videoHeight;
          const ctx = canvas.getContext('2d');
          ctx.drawImage(this.video, 0, 0, canvas.width, canvas.height);
          return canvas.toDataURL('image/jpeg');
        }
        // Intentar iniciar sesi√≥n con el rostro detectado
        async attemptLogin() {
          // Verificar que la c√°mara est√© lista
          if (!this.video.videoWidth) {
            this.showStatus('Espera a que la c√°mara est√© lista', 'error');
            return;
          }
          
          this.showStatus('Analizando rostro...', 'info');
          
          try {
            // Capturar imagen actual
            const imageData = this.captureFrame();
            // Enviar al servidor para verificaci√≥n
            const response = await fetch(`${this.serverUrl}/login`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ image: imageData })
            });
            
            const result = await response.json();
            
            if (result.success) {
              this.showStatus('¬°Login exitoso! Redirigiendo...', 'success');
              
              // Guardar datos del usuario en sessionStorage
              sessionStorage.setItem('user', JSON.stringify(result.data));
              
              // Redireccionar despu√©s de un breve delay
              setTimeout(() => {
                window.location.href = '/dashboard';
              }, 1500);
            } else {
              this.showStatus(result.message || 'Rostro no reconocido', 'error');
            }
          } catch (error) {
            this.showStatus('Error de conexi√≥n con el servidor', 'error');
          }
        }
        // Registrar un nuevo rostro en el sistema
        async registerFace() {
          // Verificar que la c√°mara est√© lista
          if (!this.video.videoWidth) {
            this.showStatus('Espera a que la c√°mara est√© lista', 'error');
            return;
          }
          // Solicitar nombre para el registro
          const name = prompt('Ingresa tu nombre para el registro:');
          if (!name) return;
          
          this.showStatus('Registrando rostro...', 'info');
          
          try {
            // Capturar imagen actual
            const imageData = this.captureFrame();
            // Enviar datos al servidor para registro
            const response = await fetch(`${this.serverUrl}/register`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ 
                image: imageData,
                name: name
              })
            });
            
            const result = await response.json();
            // Procesar respuesta del servidor
            if (result.success) {
              this.showStatus('Rostro registrado correctamente', 'success');
            } else {
              this.showStatus(result.message || 'Error en el registro', 'error');
            }
          } catch (error) {
            this.showStatus('Error de conexi√≥n con el servidor', 'error');
          }
        }
        // Mostrar informaci√≥n del usuario autenticado
        showUserInfo() {
          this.userInfo.classList.remove('hidden');
          this.loginBtn.classList.add('hidden');
          this.registerBtn.classList.add('hidden');
        }
        
        logout() {
          this.userInfo.classList.add('hidden');
          this.loginBtn.classList.remove('hidden');
          this.registerBtn.classList.remove('hidden');
          this.showStatus('Sesi√≥n cerrada', 'info');
        }
        // M√©todo auxiliar para mostrar mensajes de estado
        showStatus(message, type) {
          this.status.textContent = message;
          this.status.className = `status ${type}`;
          this.status.classList.remove('hidden');
          // Ocultar el mensaje despu√©s de un tiempo
          setTimeout(() => {
            this.status.classList.add('hidden');
          }, 3000);
        }
      }
      
      // Inicializar la aplicaci√≥n
      new FacialRecognitionApp();
    </script>
  </body>
</html>
